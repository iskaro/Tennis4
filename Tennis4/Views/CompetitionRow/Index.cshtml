@model IEnumerable<Tennis4.Models.CompetitionRow>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "CompetitionRow", FormMethod.Get))
    {
        <p>
            Pretraga: @Html.DropDownList("CompetitionNames", "Choose competition")
            <input type="submit" value="Select" />
        </p>

    } 

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Competition.CompetitionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RowNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Competition.CompetitionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RowNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
