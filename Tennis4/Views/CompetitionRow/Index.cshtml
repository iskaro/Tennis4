@model IEnumerable<Tennis4.Models.CompetitionRow>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "CompetitionRow", FormMethod.Get))
{
    <div>
        Competition: @Html.DropDownList("CompetitionNames", ViewBag.CompetitionNames as SelectList, "Choose competition", new { id = "CompetitionSearch" })
        
    </div>

    <span>
        Round: <select id="RoundSearch"></select>
        @*Round: @Html.DropDownList("Rounds", "Choose round")*@
        <input type="submit" value="Select" />
    </span>


}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Round.Competition.CompetitionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RowNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Round.Competition.CompetitionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

<script src="~/Scripts/jquery-2.1.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">

    $(function () {
        $('#CompetitionSearch').change(function () {
            $.getJSON('/CompetitionRow/GetRounds/' + $('#CompetitionSearch').val(), function (data) {
                var items = '<option>Select round</option>';
                $.each(data, function (i, round) {
                    items += "<option value='" + round.Value + "'>" + round.Text + "</option>";
                });
                $('#RoundSearch').html(items);
            });
        });
    });

</script>

